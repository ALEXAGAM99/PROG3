{
  "name": "create-react-electron-app",
  "version": "0.1.0",
  "description": "A simple starter project to get up and developing quickly with the blend of React and Electron JS for building a Native Desktop App on various OS Platforms like Windows, Linux and macOS using Electron Builder.",
  "main": "main.js",
  "author": "Souleh Shaikh <author.souleh@thegeekytutor.com>",
  "license": "MIT",
  "private": false,
  "build": {
    "icon": "public/imagen.jpg",
    "productName": "React and Electron App",
    "files": [
      "build/**/*",
      "main.js"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "start": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
    "build": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"npm run start\" \"npm run electron\"",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.16",
    "bootstrap": "^5.3.8",
    "click-to-react-component": "^1.1.3",
    "electron-packager": "^17.1.2",
    "electron-serve": "^1.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^5.3.0",
    "electron": "^34.1.1",
    "electron-builder": "^22.14.13",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "3.4.3",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.7.3",
    "wait-on": "^5.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "cross-platform",
    "native-app",
    "installed-app",
    "desktop-applications",
    "windows",
    "linux",
    "macos",
    "html",
    "css",
    "javascript",
    "front-end",
    "declarative",
    "react",
    "react-dom",
    "react-scripts",
    "electron",
    "electron-builder",
    "electron-serve",
    "concurrently",
    "wait-on"
  ]
}
